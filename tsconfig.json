{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,
    "useBabel": true,
    "isolatedModules": true,
    "useCache": true
  },
  "exclude": ["node_modules", "dist"]
}
